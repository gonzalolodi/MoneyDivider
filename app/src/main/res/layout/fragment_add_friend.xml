<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="co.mobilemakers.moneydivider.AddFriendFragment"
    android:gravity="center">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_friend_name"
        android:hint="@string/edit_text_friend_name"
        android:gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edit_text_amount"
        android:hint="@string/edit_text_amount"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:text="@string/button_done"
        android:id="@+id/button_done"
        android:textColor="@color/accent"
        android:background="@drawable/button_selector"
        android:shadowColor="@color/primary_dark"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:enabled="false" />
</LinearLayout>
